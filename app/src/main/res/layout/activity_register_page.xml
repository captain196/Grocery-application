<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register_page"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/icon2"
            android:layout_centerHorizontal="true">

        </ImageView>

        <TextView
            android:id="@+id/login"
            android:layout_below="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register with Us"
            android:layout_marginTop="50dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_centerHorizontal="true"
            android:textSize="30dp">

        </TextView>

        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:layout_below="@id/login"
            android:textSize="19dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/colorAccent">

        </TextView>


        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/name_text"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/item_box"
            android:fontFamily="sans-serif-condensed-light"
            android:hint="Please enter Your full name"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp"></EditText>

        <TextView
            android:id="@+id/phone_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:layout_below="@id/name"
            android:textSize="19dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/colorAccent">

        </TextView>


        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/phone_text"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/item_box"
            android:fontFamily="sans-serif-condensed-light"
            android:hint="Please enter your phone number"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp"></EditText>


        <TextView
            android:id="@+id/email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Id"
            android:layout_below="@id/phone"
            android:textSize="19dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/colorAccent">

        </TextView>


        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/email_text"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"

            android:layout_marginRight="40dp"
            android:background="@drawable/item_box"
            android:fontFamily="sans-serif-condensed-light"
            android:hint="Please enter a valid email address"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp">

        </EditText>

        <TextView
            android:id="@+id/password_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Password"
            android:layout_below="@id/email"
            android:textSize="19dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/colorAccent">

        </TextView>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password_text"
            android:layout_marginTop="3dp"
            app:passwordToggleEnabled="true"
            app:hintEnabled="false">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@id/password_text"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/item_box"
                android:hint="Plase enter atleast 6 characters"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                app:passwordToggleEnabled="true"></EditText>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:layout_below="@id/pass"
            android:textSize="19dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/colorAccent">
        </TextView>
        <EditText
            android:id="@+id/flat_number"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/address_text"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/item_box"
            android:fontFamily="sans-serif-condensed-light"
            android:hint="Flat No./Door no."
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp">
        </EditText>
        <EditText
            android:id="@+id/apartment_name"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/flat_number"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/item_box"
            android:fontFamily="sans-serif-condensed-light"
            android:hint="Apartment name"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp">
        </EditText>


        <Button
            android:id="@+id/otp_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/apartment_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/add_button"
            android:fontFamily="@font/buenard"
            android:gravity="center"
            android:padding="5dp"
            android:text="Create Account"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="25dp">

        </Button>

        <TextView
            android:layout_marginBottom="20dp"
            android:id="@+id/already_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/otp_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/buenard"
            android:text="Already a member? Login now"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp">

        </TextView>


    </RelativeLayout>

</ScrollView>
